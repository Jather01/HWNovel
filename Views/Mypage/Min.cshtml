@model HWNovel.HWN01

@{
    HWNNOTICE view = ViewBag.noticeView;
    List<string> userinfo = ViewBag.userinfo == null ? new List<string>(new string[] { "0", "0", "0", "0" }) : ViewBag.userinfo;
}

<main>
    <div class="myinfo_section">
        <div>
            <h2 class="noti_title">내 정보</h2>
        </div>
        <div class="myinfo_content">
            <ul class="myinfo_table">
                <li class="myinfo_item">
                    <span class="myinfo_item_title">아이디</span>
                    <span class="myinfo_item_value">@Model.USERID</span>
                </li>
                <li class="myinfo_item">
                    <span class="myinfo_item_title">이름</span>
                    <span class="myinfo_item_value">@Model.NAME</span>
                </li>
                <li class="myinfo_item">
                    <span class="myinfo_item_title">생년월일</span>
                    <span class="myinfo_item_value">@(Model.BIRTHDAY.Substring(0,4))년 @(Model.BIRTHDAY.Substring(4,2))월 @(Model.BIRTHDAY.Substring(6,2))일</span>
                </li>
                <li class="myinfo_item">
                    <span class="myinfo_item_title">닉네임</span>
                    <span class="myinfo_item_value">@Model.NICKNAME</span>
                </li>
            </ul>
        </div>
        <form id="pwCheck" name="pwCheck" action="/Mypage/Pwcheck" method="post">
            <input type="hidden" name="NextUrl" id="NextUrl" value=""/>
        </form>
        <div class="myinfo_button_group">
            <button type="button" class="btn btn-outline-dark" id="infoUpdate">회원정보 수정</button>
            <button type="button" class="btn btn-outline-dark" id="pwUpdate">비밀번호 변경</button>
            <button type="button" class="btn btn-outline-danger" id="userDelete">회원탈퇴</button>
        </div>
    </div>
</main>
@section scripts{
    <script type="text/JavaScript">
        $(function () {
            if ("@userinfo[3]" == "0") {
                location.href = "/Home/Main";
            }
        });

        $("#infoUpdate").click(function () {
            $("#NextUrl").val("InfoUpdate");
            $("#pwCheck").submit();
        });

        $("#pwUpdate").click(function () {
            $("#NextUrl").val("PwUpdate");
            $("#pwCheck").submit();
        });

        $("#userDelete").click(function () {
            $("#NextUrl").val("UserDelete");
            $("#pwCheck").submit();
        });
    </script>
}